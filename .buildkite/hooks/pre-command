if [ -z "$BUILDKITE_TAG" ]
then
  PIPELINE_IMAGE_TAG="${BUILDKITE_BRANCH}-${BUILDKITE_COMMIT}"
else
  PIPELINE_IMAGE_TAG="${BUILDKITE_TAG}-${BUILDKITE_BRANCH}-${BUILDKITE_COMMIT}"
fi
PIPELINE_TEST_DOCKER_IMAGE_COMMAND="goss --gossfile ./tests/goss.yaml validate --color --format documentation"
PIPELINE_DOCKER_REGISTRY_URL="henkbl/helmsman"
PIPELINE_APP_UNIT_TEST_COMMAND="echo TODO"

echo "PIPELINE_DOCKER_IMAGE=${PIPELINE_DOCKER_IMAGE}"
echo "PIPELINE_IMAGE_TAG=${PIPELINE_IMAGE_TAG}"
echo "PIPELINE_TEST_DOCKER_IMAGE_COMMAND=${PIPELINE_TEST_DOCKER_IMAGE_COMMAND}"
echo "PIPELINE_DOCKER_REGISTRY_URL=${PIPELINE_DOCKER_REGISTRY_URL}"
echo "PIPELINE_APP_UNIT_TEST_COMMAND=${PIPELINE_APP_UNIT_TEST_COMMAND}"
